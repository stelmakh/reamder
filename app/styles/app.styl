$c-black = #333
$c-yellow = #FFEFCE
$c-gray = #eee
$c-light-gray = #f0f0f0
$c-active = #5ABCE9
*
  &,
  &:before,
  &:after
    box-sizing: border-box

html
  height: 100%

body
  height: 100%
  color: $c-black
  overflow: hidden
  font-family: Arial
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

a
  color: $c-active

#app
  width: 100vw
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  height: 100%
  overflow-y: auto

.Header
  display: flex
  align-items: center
  position: fixed
  background: white
  top: 0
  left: 0
  right: 0
  height: 80px
  box-shadow: 0px -1px 13px 1px rgba(0,0,0,0.75)
  transition: all .5s ease

  &.is-hidden
    top: -80px
    opacity: 0

    & ~ .Content
      height: 100vh
      margin-top: 0

  h1
    margin: 0 12px
    font-size: 22px
    text-transform: uppercase

.FileUpload
  margin: 0 12px
  input
    display: none

.Files
  margin-right: 12px
  height: 32px
  border-color: $c-gray
  background: none

.Content
  background: $c-yellow
  margin-top: 80px
  padding: 24px
  line-height: 1.5em
  height: calc(100vh - 80px)
  overflow-y: auto
  transition: all .5s ease

  &--black
    color: $c-light-gray
    background: $c-black
  &--yellow
    color: $c-black
    background: $c-yellow
  &--white
    color: $c-black
    background: $c-light-gray

  &--empty
    text-align: center
    font-size: 20px

.Buttons
  display: flex

.Button
  border: 1px solid $c-gray
  padding: 6px 12px
  border-radius: 3px
  cursor: pointer
  user-select: none

  display: flex
  justify-content: center
  align-items: center

  &--fontMinus, &--fontPlus
    border: none

  &--fontMinus
    font-size: 14px

  &--fontPlus
    font-size: 18px

  &.is-active
    background: $c-active
    color: white

  &:not(:first-child)
    margin-left: 6px

.Scheme
  width: 36px
  height: 36px
  border-radius: 50%
  position: relative
  border: 1px solid white

  &--black
    &:after
      background: $c-black
    &.is-active
      border-color: $c-black
  &--yellow
    &:after
      background: $c-yellow
    &.is-active
      border-color: $c-yellow
  &--white
    &:after
      background: $c-light-gray
    &.is-active
      border-color: $c-light-gray

  &:after
    content: ''
    width: 28px
    height: 28px
    position: absolute;
    top: 3px;
    left: 3px;
    border-radius: 50%;

  &:not(:first-child)
    margin-left: 6px

