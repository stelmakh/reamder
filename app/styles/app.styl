@import '_vars'

*
  &,
  &:before,
  &:after
    box-sizing: border-box

html
  height: 100%

body
  height: 100%
  color: $c-black
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

#app
  width: 100vw

.Header
  display: flex
  align-items: center

.Content
  background: #FFEFCE
  margin-top: 12px
  padding: 24px

.Buttons
  display: flex

.Button
  border: 1px solid #eee
  padding: 6px 12px
  border-radius: 3px
  cursor: pointer

  &.is-active
    background: $c-active
    color: white

  &:not(:first-child)
    margin-left: 6px
